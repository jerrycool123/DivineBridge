{
  "name": "divine-bridge",
  "version": "0.0.1",
  "devDependencies": {
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "syncpack": "^12.3.0",
    "turbo": "^1.12.4"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{mjs,cjs,js,ts,tsx,jsx}": [
      "eslint"
    ],
    "*.{json,md,html,mjs,cjs,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.15.3",
  "scripts": {
    "build": "turbo run build",
    "deploy": "vercel --prod deploy",
    "deploy:sls-backup": "turbo run deploy --filter sls-backup",
    "deploy:sls-check-membership": "turbo run deploy --filter sls-check-membership",
    "deploy:sls-ocr": "turbo run deploy --filter sls-ocr",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter web --filter @divine-bridge/common",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx husky",
    "start": "turbo run start",
    "test": "turbo run test"
  },
  "syncpack": {
    "dependencyTypes": [
      "dev",
      "overrides",
      "peer",
      "pnpmOverrides",
      "prod",
      "resolutions"
    ]
  }
}
