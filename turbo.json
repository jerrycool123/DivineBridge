{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": ["@divine-bridge/common#build"],
      "dotEnv": [".env.development.local", ".env"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "build/**", "dist/**"],
      "dotEnv": [".env.production.local", ".env"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "format": {}
  }
}
