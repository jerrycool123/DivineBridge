{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "dependsOn": [
        "@divine-bridge/i18n#build",
        "@divine-bridge/ocr-service#build",
        "@divine-bridge/common#build"
      ],
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.development.local", ".env"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "build/**", "dist/**"],
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.production.local", ".env"]
    },
    "deploy": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "mongodump",
        ".env.production.local",
        ".env"
      ]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "format": {},
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env.test"]
    },
    "check-types": {}
  }
}
